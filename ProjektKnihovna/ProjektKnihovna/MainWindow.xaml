<Window x:Class="ProjektKnihovna.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektKnihovna"
        mc:Ignorable="d"
        Title="Knihovna"
        Height="1080" Width="1920" 
        WindowStyle="None" WindowState="Maximized" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown" 
        MaxHeight="1080" MaxWidth="1920" 
        MinHeight="480" MinWidth="852">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Button Name="ButtonExit" 
                Content="X" 
                Grid.Column="2"  
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Height="32" Width="64" 
                FontSize="16"
                Click="ZavriAplikaci"/>

        <Button Name="ButtonResizeSmall" 
                Content="◱"
                Grid.Column="2"
                Margin="0,0,64,0"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Height="32" Width="64"
                FontSize="16" 
                Click="ZmensiAplikaci"/>

        <Button Name="ButtonMinimize" 
                Content="-"
                Grid.Column="2" 
                Margin="0,0,128,0"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Height="32" Width="64" 
                FontSize="16"
                Click="MinimalizujAplikaci"/>

        <Button Name="ButtonResizeBig" 
                IsEnabled="False" 
                Visibility="Hidden" 
                Grid.Column="2" 
                Content="⬜" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Height="32" Width="64" 
                FontSize="16" 
                Click="ZvetsiAplikaci" 
                Margin="0,0,64,0"/>

        <DataGrid Name="TabulkaNabidka"
                  Grid.Row="1"
                  IsReadOnly="True"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Width="700"
                  Height="450"
                  AutoGenerateColumns="False"
                  Margin="0,32,0,0"
                  ItemsSource="{Binding SourceCollection}">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Název" Binding="{Binding Nazev}" Width="180"/>
                <DataGridTextColumn Header="Cena" Binding="{Binding Cena}" Width="100"/>
                <DataGridTextColumn Header="Typ" Binding="{Binding Typ}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid Name="TabulkaZakoupene"
                  Grid.Column="1" 
                  Grid.Row="1" 
                  IsReadOnly="True"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Width="700"
                  Height="450"
                  AutoGenerateColumns="False"
                  Margin="0,32,0,0"
                  ItemsSource="{Binding SourceCollection}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Název" Binding="{Binding Nazev}" Width="180"/>
                <DataGridTextColumn Header="Cena" Binding="{Binding Cena}" Width="100"/>
                <DataGridTextColumn Header="Typ" Binding="{Binding Typ}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Name="ButtonAdd"
                Content="Kup" 
                HorizontalAlignment="Center" 
                Grid.Row="1" 
                Margin="0,0,0,100"
                VerticalAlignment="Bottom"
                FontSize="16"
                Width="700"
                Height="32"
                Click="ButtonAdd_Click"/>
        
        <Button Name="ButtonDelete"
                Content="Odstraň z knihovny" 
                HorizontalAlignment="Center" 
                Grid.Row="1" 
                Grid.Column="1"
                Margin="0,0,0,100"
                VerticalAlignment="Bottom"
                FontSize="16"
                Width="700"
                Height="32" Click="ButtonDelete_Click"/>

        <Label Name="PrihlasenyUzivatel"
               Content="Zde"
               Grid.Column="1"
               HorizontalAlignment="Left"
               Margin="100,0,0,50"
               Grid.Row="1" 
               VerticalAlignment="Bottom"
               FontSize="16"/>

        <Button Name="Odhlaseni"
               Content="Odhlásit"
               Grid.Column="1"
               HorizontalAlignment="Right"
               Margin="0,0,100,50"
               Width="80"
               Height="32"
               Grid.Row="1" 
               VerticalAlignment="Bottom"
               FontSize="16"/>

        <Label
               Content="Nabídka knih"
               Grid.Column="0"
               Grid.Row="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="16"/>

        <Label
               Content="Zakoupené knihy"
               Grid.Column="1"
               Grid.Row="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="16"/>
    </Grid>
</Window>
