<Window x:Class="ProjektKnihovna.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektKnihovna"
        mc:Ignorable="d"
        Title="Knihovna" Height="1080" Width="1920" WindowStyle="None" WindowState="Maximized" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Name="ButtonExit" Grid.Column="2" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Height="32" Width="64" FontSize="16" Click="ExitApp"/>
        <Button Name="ButtonResizeSmall" Grid.Column="2" Content="◱" HorizontalAlignment="Right" VerticalAlignment="Top" Height="32" Width="64" FontSize="16" Click="ResizeSmallApp" Margin="0,0,64,0"/>
        <Button Name="ButtonMinimize"  Grid.Column="2" Content="-" HorizontalAlignment="Right" VerticalAlignment="Top" Height="32" Width="64" FontSize="16" Click="MinimizeApp" Margin="0,0,128,0"/>
        <Button Name="ButtonResizeBig" IsEnabled="False" Visibility="Hidden" Grid.Column="2" Content="⬜" HorizontalAlignment="Right" VerticalAlignment="Top" Height="32" Width="64" FontSize="16" Click="ResizeBigApp" Margin="0,0,64,0"/>

    </Grid>
</Window>
